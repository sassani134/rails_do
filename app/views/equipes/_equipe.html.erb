<div id="<%= dom_id equipe %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= equipe.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Town:</strong>
    <%= equipe.town %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Joueur:</strong>
    <%= equipe.joueur_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this equipe", equipe, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this equipe', edit_equipe_path(equipe), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
